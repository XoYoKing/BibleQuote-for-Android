<resources>
    
    <style name="DefaultButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">10dp</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    
    <style name="BookLinkContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#6f0b0b</item>
        <item name="android:textSize">@dimen/text_size_small</item>
 		<item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">2dp</item>
    </style>
    
    <style name="DashBoardText">
		<item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

	<style name="TextAppearance">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
		<item name="android:textColorHighlight">#FFFF9200</item>
		<item name="android:textColorHint">?android:attr/textColorHint</item>
		<item name="android:textColorLink">#5C5CFF</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="TextAppearance.Large">
		<item name="android:textSize">22sp</item>
	</style>

	<style name="TextAppearanceLarge" parent="@style/TextAppearance.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

</resources>