<resources>

	<style name="Theme.BibleQuote" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/primary</item>
		<item name="android:textColorPrimary">@color/black</item>
		<!-- Action bar -->
		<item name="actionBarStyle">@style/Widget.ActionBar</item>
		<item name="actionMenuTextColor">@color/accent</item>
		<!-- Action mode -->
		<item name="windowActionModeOverlay">false</item>
		<item name="actionModeStyle">@style/Widget.ActionMode</item>
		<item name="actionModeBackground">@color/action_mode_background</item>
	</style>

	<style name="Theme.BibleQuote.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/primary</item>
		<item name="android:textColorPrimary">@color/black</item>
		<!-- Action bar -->
		<item name="actionBarStyle">@style/Widget.ActionBar</item>
		<item name="actionMenuTextColor">@color/accent</item>
		<!-- Action mode -->
		<item name="windowActionModeOverlay">true</item>
		<item name="actionModeStyle">@style/Widget.ActionMode</item>
		<item name="actionModeBackground">@color/action_mode_background</item>
	</style>

    <style name="ToolbarTheme" parent="@style/Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/toolbarTextColor</item>
        <item name="actionMenuTextColor">@color/toolbarTextColor</item>
    </style>

    <style name="ToolbarPopupTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/toolbarTextColor</item>
        <item name="android:textColorPrimary">@color/primary</item>
    </style>

	<style name="Theme.FullscreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowNoTitle">true</item>
	</style>

	<!-- Action mode -->

	<style name="Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
		<item name="titleTextStyle">@style/Widget.ActionBar.TitleText</item>
	</style>

	<!-- Action bar -->

	<style name="Widget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">>
		<item name="titleTextStyle">@style/Widget.ActionBar.TitleText</item>
	</style>

	<style name="Widget.ActionBar.TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">>
		<item name="android:textColor">@color/accent</item>
	</style>

</resources>