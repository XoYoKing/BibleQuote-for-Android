<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/btn_prev"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:background="@drawable/btn_bordered_left_rounded"
        android:src="@drawable/ic_arrow_prev"/>

    <ImageButton
        android:id="@+id/btn_up"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginLeft="-2dp"
        android:background="@drawable/btn_bordered"
        android:src="@drawable/ic_arrow_pageup"/>

    <ImageButton
        android:id="@+id/btn_down"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginLeft="-2dp"
        android:background="@drawable/btn_bordered"
        android:src="@drawable/ic_arrow_padedown"/>

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_marginLeft="-2dp"
        android:background="@drawable/btn_bordered_right_rounded"
        android:src="@drawable/ic_arrow_next"/>
</LinearLayout>