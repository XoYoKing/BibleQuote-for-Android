<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/list_selector_background"
    android:orientation="vertical"
    android:padding="@dimen/default_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bookmark_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:text="2 May, 2013"/>

        <TextView
            android:id="@+id/bookmark_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/bookmark_time"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:text="KJV:1Samuel 3:1"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/bookmark_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="Bookmark name"/>

    <TextView
        android:id="@+id/bookmark_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:drawableLeft="@drawable/ic_list_tag"
        android:drawablePadding="4dp"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:text="@string/no_tags"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

</LinearLayout>
