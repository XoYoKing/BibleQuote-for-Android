<com.BibleQuote.ui.widget.listview.itemview.BookmarkItemView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@android:drawable/list_selector_background"
	android:paddingBottom="2dp"
	android:paddingLeft="10dp"
	android:paddingRight="10dp"
	android:paddingTop="2dp">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="28dp">

		<TextView
			android:id="@+id/date"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_alignParentRight="true"
			android:gravity="center_vertical|right"
			android:textColor="#6e6e6e"
			android:textSize="@dimen/text_size_very_small"
			android:ellipsize="end"
			android:paddingLeft="2dp"
			android:singleLine="true"
			android:text="2 May, 2013"
			android:shadowColor="#ffffffff"
			android:shadowDx="0"
			android:shadowDy="1"
			android:shadowRadius="0.1"/>

		<TextView
			android:id="@+id/name"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_alignParentLeft="true"
			android:textColor="@android:color/black"
			android:gravity="center_vertical|left"
			android:textSize="@dimen/text_size_medium"
			android:singleLine="true"
			android:ellipsize="end"
			android:layout_toLeftOf="@id/date"
			android:text="Bookmark name"
			/>

	</RelativeLayout>

	<TextView
		android:id="@+id/link"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="2dp"
		android:paddingBottom="2dp"
		android:textColor="@android:color/black"
		android:gravity="center_vertical|left"
		android:textSize="@dimen/text_size_small"
		android:singleLine="true"
		android:text="KJV:1Samuel 3:1"/>

	<TextView
		android:id="@+id/tags"
		android:layout_width="fill_parent"
		android:layout_height="18dp"
		android:drawableLeft="@drawable/ic_list_tag"
		android:drawablePadding="4dip"
		android:textSize="@dimen/text_size_very_small"
		android:text="@string/no_tags"
		android:singleLine="true"
		android:layout_gravity="center_vertical|left"
		android:textColor="#6e6e6e"
		android:paddingBottom="2dp"
		android:paddingTop="2dp"
		android:gravity="center_vertical|left"
		android:shadowColor="#ffffffff"
		android:shadowDx="0"
		android:shadowDy="1"
		android:shadowRadius="0.1"/>

</com.BibleQuote.ui.widget.listview.itemview.BookmarkItemView>
